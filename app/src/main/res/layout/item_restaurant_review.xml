<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtReviewerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Chew Hong Yu" />

    <RatingBar
        android:id="@+id/restDetailsRatingBar"
        android:layout_width="243dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:isIndicator="true"
        android:progressBackgroundTint="#D3D3D3"
        android:progressTint="#FFC922"
        android:rating="3"
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:secondaryProgressTint="#FFC922"
        android:transformPivotX="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/txtReviewerName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtReviewerName"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtReviewerDescription"
        android:layout_width="368dp"
        android:layout_height="110dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="This restaurant is very good"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtReviewerDate" />

    <TextView
        android:id="@+id/txtReviewerDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="28-09-2021 13:55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtReviewerName" />
</androidx.constraintlayout.widget.ConstraintLayout>